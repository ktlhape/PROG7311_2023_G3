@model IEnumerable<ConnectToDB.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutSt";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.StudentID">Edit</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.StudentID">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.StudentID">Delete</a>
                    <a asp-action="StudentModules" class="btn btn-success" asp-route-id="@item.StudentID">Modules</a>
            </td>
        </tr>
}
    </tbody>
</table>
